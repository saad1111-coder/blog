<h1 class="title">Blog Index</h1>


<section class="section">
   <div class="container">
        <% @post.each do |post| %>
            <div class="card">
                <div class="card-content">
                    <div class="media" >
                        <div class="media-content">
                            <p class="title is-6"><%=  link_to post.title, post %></p>
                        </div>
                    </div> 
                    <div class="content">
                        <%= post.content %>
                    </div>
                    <div class="comment-count">
                        <span class="tag is-rounded">

                        </span>

                    </div>
                </div>

            </div>
            <br>
        <% end %>
   </div>
</section>