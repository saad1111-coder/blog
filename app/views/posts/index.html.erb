<section class="blog-list px-3 py-5 p-md-5">
    <div class="container">
        <% @post.each do |post| %>
        <div class="card">
            <div class="card-header">
                <%=  link_to post.title, post %>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%=  post.title %></h5>
              <p class="card-text"> <%= post.content %></p>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>
            
        <% end %>

        
    </div>
</section>

 
    
    
   </div>
</section>